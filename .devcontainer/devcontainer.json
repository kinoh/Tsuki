{
  "name": "tsuki-core",
  "workspaceFolder": "/workspaces/tsuki",
  "dockerComposeFile": ["../compose.yaml", "../compose.dev.yaml", "./compose.yaml"],
  "service": "core",
  "shutdownAction": "stopCompose",
  "remoteUser": "node",
  "postCreateCommand": "npm config set prefix \"$HOME/.npm-global\" && npm -g i pnpm",
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:${containerEnv:HOME}/.npm-global/bin"
  }
}
